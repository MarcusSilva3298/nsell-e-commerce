enum UserType {
  CLIENT
  ADMIN
}

model User {
  id String @id @default(uuid())

  name          String
  email         String   @unique
  verifiedEmail Boolean
  password      String
  type          UserType

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
